@model PozdravSvijete.Models.Osoba
@{
    Layout = null;
    string datumRod = Model.DatumRodjenja == null ? "" :
        ((DateTime)Model.DatumRodjenja).ToString("dd.MM.yyyy");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrikaziOsobu</title>
    <style>
        label{
            display:inline-block;
            margin:5px;
        }
    </style>
</head>
<body>
    <div> 
        <form method="post" action="/Osobe/PrikaziOsobu">
            <div>
                <label>Ime: @Model.Ime </label>
            </div>
            <div>
                <label>Prezime: @Model.Prezime </label>
            </div>
            <div>
                <label>Email: @Model.Email </label>
            </div>
            <div>
                <label>Datum rođenja: @datumRod</label>
            </div>
            <div>
                <a href="/Osobe/PopuniOsobu">Natrag</a>
            </div>
        </form>
    </div>
</body>
</html>
