@model IEnumerable<Adonet_spajanje_na_bazu.Models.Tecaj>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Naziv)</th>
                <th>@Html.DisplayNameFor(model => model.Opis)</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Naziv)</td>
                    <td>@Html.DisplayFor(modelItem => item.Opis)</td>
                </tr>
            </tbody>
        }

    </table>
</body>
</html>
