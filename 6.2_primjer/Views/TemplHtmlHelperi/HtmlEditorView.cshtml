@model _6._2_primjer.Models.OsobaTempl
@{
    ViewBag.Title = "HtmlEditorView";
    Html.EnableClientValidation(false);
}

@using (Html.BeginForm())
{
    <div>
        <label for="OsobaId">Id:</label>
        @Html.Editor("OsobaId")
    </div>
    <div>
        <label for="Ime">Ime:</label>
        @Html.Editor("Ime")
    </div>
    <div>
        <label for="Prezime">Prezime:</label>
        @Html.Editor("Prezime")
    </div>
    <div>
        <label for="Email">Email:</label>
        @Html.Editor("Email")
    </div>
    <div>
        <label for="MjestoStanovanja">Mjesto stanovanja:</label>
        @Html.EditorFor(x => x.MjestoStanovanja)
    </div>
    <div>
        <label>Spol:</label>
        @Html.EditorFor(x => x.Spol)
    </div>
    <div>
        <label for="Zaposlen">Zaposlen:</label>
        @Html.EditorFor(x => x.Zaposlen)
    </div>
    <div>
        <label for="DatumRodenja">Datum Rodenja:</label>
        @Html.EditorFor(x => x.DatumRodenja)
    </div>
    <div>
        <label for="Napomena">Napomena:</label>
        @Html.EditorFor(x => x.Napomena)
    </div>
    <input type="submit" value="Pošalji" />
}

