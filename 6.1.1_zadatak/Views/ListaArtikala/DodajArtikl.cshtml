@using _6._1._1_zadatak.Models
@model List<Artikl>
@{
    ViewBag.Title = "DodajArtikl";
}

<h2>Dodaj Artikl</h2>
<div>
    <table>
        <thead>
            <tr>
                <th>Kategorija:</th>
                <th>Naziv:</th>
                <th>Cijena:</th>
                <th>Količina:</th>
            </tr>
        </thead>
        @foreach (Artikl item in (List<Artikl>)Model)
        {
            <tbody>
                <tr>
                    <td>@item.Kategorija</td>
                    <td>@item.Naziv</td>
                    <td>@string.Format("{0:N2}", item.Cijena)</td>
                    <td>@item.Kolicina</td>
                </tr>
            </tbody>
        }
    </table>
</div>
<p>
    <a href="/ListaArtikala/UnesiArtikl">Unos novog artikla</a>
</p>
