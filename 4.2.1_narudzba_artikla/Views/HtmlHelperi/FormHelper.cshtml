@model _4._2._1_narudzba_artikla.Models.Osoba
@{
    ViewBag.Title = "FormHelper";
}

<h2>FormHelper</h2>

@foreach (var item in ViewBag.Mjesta)
{
    @item
}
@using (Html.BeginForm("FormHelper", "HtmlHelperi",FormMethod.Post))
{
    <div>
        <label for="Ime">Ime:</label>
        @Html.TextBox("Ime",Model.Ime)
    </div>
    <div>
        <label for="Prezime">Prezime:</label>
        @Html.TextBox("Prezime", Model.Prezime)
    </div>
    <div>
        <label for="Email">Email:</label>
        @Html.TextBox("Email",Model.Email)
    </div>
    <div>
        <label for="MjestoStanovanja">Mjesto stanovanja:</label>
        @Html.DropDownList("MjestoStanovanja", new SelectList((string[])ViewBag.Mjesta),"--Odaberi--")
    </div>
    <div>
        <label>Spol:</label><br />
        @Html.RadioButton("Spol", "Muško", true)Muško<br />
        @Html.RadioButton("Spol", "Žensko", false)Žensko<br />
    </div>
    <div>
        <label for="Zaposlen">Zaposlen:</label>
        @Html.CheckBox("Zaposlen", false)
    </div>
    <input type="submit" value="Pošalji" />
}
<br />
<div>
    <p>
        <label>@ViewBag.Poruka</label>
    </p>
</div>


