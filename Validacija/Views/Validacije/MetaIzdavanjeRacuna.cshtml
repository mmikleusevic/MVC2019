@model Validacija.Models.MetaRacun
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MetaIzdavanjeRacuna</title>
    <style>
        label {
            display: inline-block;
            width: 150px;
            margin: 5px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div>
                @Html.LabelFor(x => x.BrojRacuna)
                @Html.EditorFor(x => x.BrojRacuna)
                @Html.ValidationMessageFor(x => x.BrojRacuna)
            </div>
            <div>
                @Html.LabelFor(x => x.Datum)
                @Html.EditorFor(x => x.Datum)
                @Html.ValidationMessageFor(x => x.Datum)
            </div>
            <div>
                @Html.LabelFor(x => x.Zaposlenik)
                @Html.EditorFor(x => x.Zaposlenik)
                @Html.ValidationMessageFor(x => x.Zaposlenik)
            </div>
            <div>
                @Html.LabelFor(x => x.Kupac)
                @Html.EditorFor(x => x.Kupac)
                @Html.ValidationMessageFor(x => x.Kupac)
            </div>
            <div>
                @Html.LabelFor(x => x.Cijena)
                @Html.EditorFor(x => x.Cijena)
                @Html.ValidationMessageFor(x => x.Cijena)
            </div>
            <input type="submit" value="Pošalji" />
            <input type="hidden" name="id" value="IzdavanjeRacuna2" />
        }
    </div>
</body>
</html>
