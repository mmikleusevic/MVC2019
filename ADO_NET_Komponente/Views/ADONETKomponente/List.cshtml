@model IEnumerable<ADO_NET_Komponente.Models.PolaznikModel>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<div>
    @Html.ActionLink("Create New", "Create")
</div>
@ViewBag.Message
@TempData["Message"]
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ime)</th>
            <th>@Html.DisplayNameFor(model => model.Prezime)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.DatumRodjenja)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.IdPolaznik)
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Prezime)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DatumRodjenja)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { idPolaznik = item.IdPolaznik }) |
                    @Html.ActionLink("Details", "Details", new { idPolaznik = item.IdPolaznik }) |
                    @Html.ActionLink("Delete", "Delete", new { idPolaznik = item.IdPolaznik })
                </td>
            </tr>
        }
    </tbody>
</table>

